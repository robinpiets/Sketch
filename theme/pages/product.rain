<div>
  <div>
    <img src="{{ product.image | url_image }}" alt="{{ product.fulltitle }}" title="{{ product.fulltitle }}" />
  </div>
  <div>
    {% for image in product.images %}
      <div>
        <img src="{{ image | url_image }}" alt="{{ product.fulltitle }}" title="{{ product.fulltitle }}" />
      </div>
    {% endfor %}
  </div>
</div>
<div>
  <h1>{{product.title}}</h1>
  <h2>{{shop.currency2.symbol}}{{product.price.price}}</h2>
  <p>
    {{product.description}}
  </p>
  <p>
    product specs:
    {% for spec in product.specs %}
      {{spec.title}}: {{spec.value}}
    {% endfor %}
  </p>
  <p>
    Delivery:
    {{ product.stock.delivery.title }}
  </p>
  <p>
    Details
    {{ product.content | raw }}
  </p>

  <div style="border: 2px solid red;">
    <form action="{{ ('cart/add/' ~ product.vid) | url }}" id=
        "product_configure_form" method="post">
      <a href="javascript:;" onclick="$('#product_configure_form').submit();" class="button is-primary" title="{{ 'Add to cart' | t }}" {% if shop.language == 'de' %}style="padding: 0px 10px;"{% endif %}>
        <span>{{ 'Add to cart' | t }}</span>
      </a>
    </form>
  </div>

</div>
